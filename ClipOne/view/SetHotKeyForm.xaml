        <CheckBox x:Name="cboCtrl" Content="Ctrl" HorizontalAlignment="Left" Margin="56,50,0,0" VerticalAlignment="Top" Tag="2"/>
        <CheckBox x:Name="cboAlt" Content="Alt" HorizontalAlignment="Left" Margin="55,70,0,0" VerticalAlignment="Top" Tag="1"/>
